
public class stringiTersceviripDonduren{
    public static void main(String[] args) {
        // kendisine parametre olarak gelen stringi ters çevirip geri döndüren method
          Scanner k=new Scanner(System.in);
        String str=k.nextLine();
        ters(str);
       
    
    }
    public static String ters(String s) {
        String terso="";
        for (int i =s.length()-1; i >=0; i--) {
            terso+=s.charAt(i);
        }System.out.println(terso);
   return s; }
}
